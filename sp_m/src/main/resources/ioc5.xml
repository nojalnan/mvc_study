<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="com.test.ioc.exam" />
	<bean id="programmer" class="com.test.ioc.exam.Programmer">
		<replaced-method name="work" replacer="designer" />
	</bean>
	<bean id="designer" class="com.test.ioc.exam.Designer" />
	<bean id="methodReplaceTest" class="com.test.ioc.exam.MethodReplaceTest">
		<property name="programmer">
			<ref bean="programmer" />
		</property>
	</bean>
</beans>