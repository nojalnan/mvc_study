<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.proj.board.service.impl.BoardMapper">

	<select id="getTotalCount" resultType="int">
		SELECT COUNT(*) FROM BOARD_INFO
	</select>

	<select id="getResult" resultType="String">
		SELECT TITLE FROM BOARD_INFO WHERE BOARD_NUM = '1'
	</select>
	
	<select id="getListResult" parameterType="int" resultType="mainVO">
		SELECT
			*
		FROM (
			SELECT
				ROWNUM RN,
				BOARD_NUM,
				TITLE,
				CONTENT,
				WRITER,
				REG_DATE
			FROM BOARD_INFO
 		)
 		WHERE RN BETWEEN (#{page}-1)*10+1 AND #{page}*10
	</select>
	
</mapper>